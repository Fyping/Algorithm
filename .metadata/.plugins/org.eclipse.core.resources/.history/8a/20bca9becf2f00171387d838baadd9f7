package leetcode;

import leetcode.ListNode;

public class Solution_2 {

	public ListNode addTwoNumbers(ListNode l1,ListNode l2){
		if(l1==null||l2==null){
			return null;
		}
		ListNode result = null;
		ListNode temp = null;
		ListNode res =null;
		boolean flag = false;
				
		while(l1.next!=null){
			temp = new ListNode(l1.val%10+l2.val%10);
			if(flag==false){
				res=temp;
				flag=true;
			}
			result = new ListNode(l1.next.val%10+l2.next.val%10);
			temp.next=result;
			l1 = l1.next;
			l2= l2.next;
		}
		return res;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ListNode a = new ListNode(1);
		ListNode b = new ListNode(2);
		ListNode c = new ListNode(3);
		ListNode d = new ListNode(4);
		a.next=b;
		b.next =c;
		c.next =d;
		
		b.next=a;
		a.next=c;
		c.next=d;
		
		ListNode.showAllElement(a);
		ListNode.showAllElement(b);
	}

}
